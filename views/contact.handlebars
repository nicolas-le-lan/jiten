<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="wrapper">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="contact-wrap">
                                <h3 class="mb-4 text-center">Contact</h3>
                                <div id="form-message-warning" class="mb-4 w-100
                                    text-center"></div>
                                <form method="post" id="contactForm"
                                    name="contactForm" class="contactForm">
                                    <div class="row g-2">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text"
                                                    class="form-control bg-light text-black"
                                                    name="name" id="name"
                                                    placeholder="Name">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="email" required="" 
                                                    class="form-control bg-light text-black"
                                                    name="email" id="email"
                                                    placeholder="Email *">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text"
                                                    class="form-control bg-light text-black"
                                                    name="subject" id="subject"
                                                    placeholder="Subject">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <textarea name="message"
                                                    class="form-control bg-light text-black"
                                                    id="message" cols="30" required=""
                                                    rows="8"
                                                    placeholder="Message *"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <aside>(*) indicates a required field</aside>
                                            <br/>
                                            <div class="form-group">
                                                <input type="submit" value="Send Message" class="btn btn-primary text-white">
                                                <div class="submitting"></div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>